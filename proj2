from algorithms import CrimeAnalysisDashboard


def main():
    # Example usage
    crime_dashboard = CrimeAnalysisDashboard('crime_data.csv')
    analysis_results = crime_dashboard.run_comprehensive_analysis()

    # Print key insights
    print("Spatial Clustering Silhouette Score:",
          analysis_results['spatial_clusters']['silhouette_score'])
    print("Crime Type Prediction MSE:",
          analysis_results['prediction_results']['mean_squared_error'])

    # Display top 10 frequent crimes
    top_crimes = crime_dashboard.top_frequent_crimes(top_n=10)
    print("\nTop 10 Frequent Crimes:")
    for crime, count in top_crimes:
        print(f"{crime}: {count} occurrences")

    # Use greedy algorithm to allocate patrol units
    num_patrol_units = 5  # Example: Allocate 5 patrol units
    patrol_allocations = crime_dashboard.greedy_hotspot_coverage(num_units=num_patrol_units)
    print(f"\nTop {num_patrol_units} Patrol Areas for Deployment:")
    for area, count in patrol_allocations:
        print(f"{area}: {count} crimes")


if __name__ == "__main__":
    main()
